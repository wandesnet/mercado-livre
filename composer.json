{
    "name": "wandesnet/mercado-livre",
    "description": "SDK for integration with api Mercado Livre",
    "keywords": ["php", "mercado livre", "SDK Mercado Livre"],
    "license": "MIT",
    "authors": [
        {
            "name": "Wandes Cardoso",
            "email": "wandes2030@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "sammyjo20/saloon": "^2.5"
    },
    "require-dev": {
        "laravel/pint": "^1.7",
        "pestphp/pest": "^2.4.0",
        "phpstan/phpstan": "^1.10.10",
        "symfony/var-dumper": "^6.2.8"
    },
    "autoload": {
        "psr-4": {
            "WandesCardoso\\MercadoLivre\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint -v",
        "test:lint": "pint --test -v",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
